source 'https://rubygems.org'

gem 'rails', '3.2.9'
gem 'mongoid', '3.0.14'
gem 'haml', '3.1.7'
gem 'jquery-rails'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem 'debugger'
end

group :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'poltergeist'
end

group :production do
  gem 'unicorn'
end

group :tools do
  gem 'capistrano'
  gem 'rvm-capistrano'
end
